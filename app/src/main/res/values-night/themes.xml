<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComicGround" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryDarkestColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkestColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- EditText Material Design -->
    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Botones Material Design -->
    <style name="buttonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
    </style>

    <style name="buttonBorderless" parent="Widget.AppCompat.Button.Borderless">
            <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <!-- Botones flotantes -->
    <style name="floatingMenu">
        <item name="fab_expandDirection">up</item>
        <item name="fab_addButtonPlusIconColor">@color/primaryDarkestColor</item>
        <item name="fab_addButtonColorNormal">@color/primaryDarkColor</item>
        <item name="fab_addButtonColorPressed">@color/primaryColor</item>
    </style>

    <style name="exitFloatingButton">
        <item name="fab_icon">@drawable/exit_dark</item>
        <item name="fab_colorNormal">@color/primaryDarkColor</item>
        <item name="fab_colorPressed">@color/primaryColor</item>
    </style>

    <style name="profileFloatingButton">
        <item name="fab_icon">@drawable/profile_dark</item>
        <item name="fab_colorNormal">@color/primaryDarkColor</item>
        <item name="fab_colorPressed">@color/primaryColor</item>
    </style>

    <!-- Textos -->
    <style name="textos" parent="Theme.ComicGround">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textosVarios" parent="Theme.ComicGround">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <!-- Visual -->
    <style name="line" parent="Theme.ComicGround">
        <item name="android:background">@color/secondaryDarkColor</item>
    </style>

    <style name="logo" parent="Theme.ComicGround">
        <item name="android:src">@drawable/logo_dark</item>
    </style>

    <style name="search" parent="Theme.ComicGround">
        <item name="android:src">@drawable/search_dark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ratingBar" parent="Theme.ComicGround">
        <item name="android:progressTint">@color/primaryDarkColor</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>
</resources>